<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_search_character_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/marvel_black"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_search_character_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/marvel_white"
        app:layout_constraintEnd_toStartOf="@id/floatingactionbutton_search_character_item_add"
        app:layout_constraintStart_toEndOf="@id/imageview_search_character_item"
        app:layout_constraintTop_toTopOf="@id/imageview_search_character_item" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_search_character_item_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textColor="@color/marvel_white"
        app:layout_constraintBottom_toBottomOf="@id/imageview_search_character_item"
        app:layout_constraintEnd_toStartOf="@id/floatingactionbutton_search_character_item_add"
        app:layout_constraintStart_toEndOf="@id/imageview_search_character_item"
        app:layout_constraintTop_toBottomOf="@id/textview_search_character_item_name" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingactionbutton_search_character_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/marvel_red"
        android:src="@drawable/ic_add"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/marvel_black" />
</androidx.constraintlayout.widget.ConstraintLayout>